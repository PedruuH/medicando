<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cor_background_pesquisa_enderecos"
    android:id="@+id/constraintMainBuscar">

    <ImageView
        android:id="@+id/imageBuscaSugestao"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_busca_recentes" />

    <TextView
        android:id="@+id/textMainBusca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/pt_sans"
        android:text="Medicamento"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageBuscaSugestao"
        app:layout_constraintEnd_toStartOf="@+id/textSugestao"
        app:layout_constraintStart_toEndOf="@+id/imageBuscaSugestao"
        app:layout_constraintTop_toTopOf="@+id/imageBuscaSugestao" />

    <TextView
        android:id="@+id/textSugestao"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/pt_sans"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:textSize="12dp"
        android:textColor="#FFFFFFFF"
        android:text="@string/sugestao"
        android:background="@drawable/background_text_sugestao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divisor_1"
        android:layout_width="0dp"
        android:layout_height="0.8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#c4c3c3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>