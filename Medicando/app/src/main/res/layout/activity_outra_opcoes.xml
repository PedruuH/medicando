<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OutraOpcoesActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerOutrasOpcoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backProgressBarOutrasOpcoes"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/progress_dialog_background"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBarOutrasOpcoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/backProgressBarOutrasOpcoes"
        app:layout_constraintEnd_toEndOf="@id/backProgressBarOutrasOpcoes"
        app:layout_constraintStart_toStartOf="@id/backProgressBarOutrasOpcoes"
        app:layout_constraintTop_toTopOf="@+id/backProgressBarOutrasOpcoes" />

</android.support.constraint.ConstraintLayout>