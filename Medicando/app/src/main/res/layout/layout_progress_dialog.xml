<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cor_transparente">

    <ImageView
        android:id="@+id/backProgressBar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/progress_dialog_background"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBarCalculaTaxa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/backProgressBar"
        app:layout_constraintEnd_toEndOf="@id/backProgressBar"
        app:layout_constraintStart_toStartOf="@id/backProgressBar"
        app:layout_constraintTop_toTopOf="@+id/backProgressBar" />

</android.support.constraint.ConstraintLayout>
